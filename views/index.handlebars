<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        {{!-- title --}}
        <h1>{{msg}} Resume builders!</h1>
        <h2>login</h2>
        {{!-- login ID/password --}}
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="input-login">login ID</label>
            <input type="text" class="form-control" id="input-login" placeholder="Enter your ID">
          </div>
          <div class="form-group">
            <label for="input-password">login password</label>
            <input type="password" class="form-control" id="input-password" placeholder="Enter your password">
          </div>
          <button id="submit" class="btn btn-primary float-right">Log in</button>
          {{!--checkout 404 page --}}
          <a href="/error">to 404 error page</a>
          
          <a href="/login/1">to example page</a>
        </form>
        {{!-- Placeholder examples --}}
        <h3>Examples:</h3>
        <ul id="example-list" class="list-group">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="example/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
